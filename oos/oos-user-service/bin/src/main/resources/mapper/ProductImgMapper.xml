<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.oos.mapper.ProductImgMapper">
<insert id="insert">
	insert into tbl_product_img(uuid,pno,iname,ipath)
	values (#{uuid},#{pno},#{iname},#{ipath})
	</insert>
<select id="getList" resultType="org.oos.domain.ProductImgVO">
		select *
		from tbl_product_img
		where uuid!='' and pno=#{pno};
	</select>
	
<delete id="delete">
	delete from tbl_product_img where uuid=#{uuid}
	</delete>
	<delete id="deleteAll">
	delete from tbl_product_img where pno=#{pno}
	</delete>
</mapper>